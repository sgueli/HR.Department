@model IEnumerable<HR.Department.Models.Entities.Employee>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Create New Employee", "Create")
</p>
<br />
<h2>Employee Listing</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First )
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Last )
        </th>
        <th>
         @Html.DisplayNameFor(model => model.Department )
        </th>
        <th>
         @Html.DisplayNameFor(model => model.Manager )
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.First )
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Last )
        </td>
        <td>
         @Html.DisplayFor(modelItem => item.Department )
        </td>
        <td>
         @Html.DisplayFor(modelItem => item.Manager )
        </td>
        <td>
             |
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>